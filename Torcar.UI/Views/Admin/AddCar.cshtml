@model CarDto
@{
    ViewData["Title"] = "Araba Ekle";

}
<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>
<div class="container">
    
    <form method="post" enctype="multipart/form-data" class="p-0 m-0" asp-action="AddCar">
        <div class="row m-0">
            <div asp-validation-summary="ModelOnly" class="text-danger small text-center"></div>
            <div class="m-0 px-0 col-6 mb-3 d-inline-grid">
                <div class="border border-1">
                    <h5 class="border-bottom text-center pb-2">Araba Markası</h5>
                    <div class="col-lg-8 col-md-8 mx-auto px-0 text-center">
                        <div class="form-group mb-3">
                            <label asp-for="CarSerial.CarModel.CarMark.Name" class="form-label">İsim</label>
                            <input asp-for="CarSerial.CarModel.CarMark.Name" type="text" class="form-control" placeholder="*İsim" />
                            
                        </div>
                    </div>
                </div>
                <div class="m-0 d-inline-grid">
                    <div class="border border-1">
                        <h5 class="border-bottom text-center pb-2">Araba Modeli</h5>
                        <div class="col-lg-8 col-md-8 mx-auto px-0 text-center">
                            <div class="form-group mb-3">
                                <label asp-for="CarSerial.CarModel.Name" class="form-label">İsim</label>
                                <input asp-for="CarSerial.CarModel.Name" type="text" class="form-control" placeholder="*İsim" />
                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="m-0 d-grid">
                    <div class="border border-1">
                        <h5 class="border-bottom text-center pb-2">Araba Serisi</h5>
                        <div class="col-lg-8 col-md-8 mx-auto px-0 text-center">
                            <div class="form-group mb-3">
                                <label asp-for="CarSerial.Name" class="form-label">İsim</label>
                                <input asp-for="CarSerial.Name" type="text" class="form-control" placeholder="*İsim" />
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="m-0 px-0 col-6 d-inline-grid ">
                <div class="border border-1 mb-3">
                    <h5 class="border-bottom text-center pb-2">Araba Bilgileri</h5>
                    <div class="col-lg-8 col-md-8 mx-auto px-0 text-center">
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <input asp-for="Description" type="text" class="form-control" placeholder="Açıklama" />
                            
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Year" class="form-label">Yıl</label>
                            <input asp-for="Year" type="text" pattern="[2]{1}[0]{1}[0-2]{1}[0-9]{1}" class="form-control"  placeholder="Yıl" />
                            
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Fuel" class="form-label">Yakıt Türü</label>
                            <select asp-for="Fuel" asp-items="Html.GetEnumSelectList<Torcar.CORE.Enums.Fuel>()" class="form-control"></select>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Gear" class="form-label">Vites Tipi</label>
                            <select asp-for="Gear" asp-items="Html.GetEnumSelectList<Torcar.CORE.Enums.Gear>()" class="form-control"></select>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="KM" class="form-label">Araç Kilometresi</label>
                            <input asp-for="KM" class="form-control" placeholder="Kilometre" type="text" pattern="[0-9]{1-7}"  />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Case" class="form-label">Kasa Tipi</label>
                            <select asp-for="Case" asp-items="Html.GetEnumSelectList<Torcar.CORE.Enums.CaseType>()" class="form-control"></select>
                            
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="HP" class="form-label">Araç Gücü</label>
                            <input asp-for="HP" class="form-control" type="text" placeholder="HP" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CC" class="form-label">Motor</label>
                            <input asp-for="CC" class="form-control" type="text" placeholder="CC" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Color" class="form-label">Araç Rengi</label>
                            <select asp-for="Color" asp-items="Html.GetEnumSelectList<Torcar.CORE.Enums.Color>()" class="form-control"></select>
                           
                        </div>
                        <div class="form-group mb-3">
                            <input type="file" accept=".jpeg,.jpg,.png" class="form-control" name="Image" asp-for="Image" />
                            <div class="text-secondary text-center">
                                <span class="small text-center">
                                    <i class="fa fa-info-circle"></i>Sadece Resim Dosyaları
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3 d-grid">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-sharp fa-solid fa-right-to-bracket"></i> Ekle</button>

            </div>
        </div>
    </form>
    </div>
</div>

