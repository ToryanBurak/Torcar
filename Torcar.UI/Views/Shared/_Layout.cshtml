<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Torcar</title>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Torcar.UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Torcar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Adverts"><i class=" fa-sharp fa-solid fa-car"></i>İlanlar</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="Admin" asp-action="Index"><i class="fa-solid fa-hammer me-2"></i> AdminPanel</a>
                                </li>
                            }
                            if (User.IsInRole("Worker"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="Worker" asp-action="Index"><i class="fa-solid fa-hammer me-2"></i>Worker Panel</a>
                                </li>
                            }
                            <li class="nav-item ms-auto me-1">
                                <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="User" asp-action="Home">@User.FindFirst("Name").Value</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="Identity" asp-action="LogOut"><i class="fa-sharp fa-solid fa-sign-out me-2"></i> Çıkış</a>
                            </li>

                        }

                        else
                        {
                            <li class="nav-item ms-auto me-1">
                                <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="Identity" asp-action="Login"> <i class="fa-sharp fa-solid fa-right-to-bracket"></i> Giriş</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="Identity" asp-action="Register"><i class="fa-sharp fa-solid fa-right-to-bracket"></i> Üye Ol</a>
                            </li>

                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Torcar
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
