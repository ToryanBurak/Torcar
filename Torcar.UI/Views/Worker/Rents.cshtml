@model IEnumerable<RentDto>
@{
    ViewData["Title"] = "Admin Panel";

}
<div class="row">
    <div class="col-12 border border-1">
        <h1 class="text-center">Kiralaması Başlamayanlar</h1>
        @foreach (var item in Model)
        {

            @if (item.RentDateState == Torcar.CORE.Enums.RentDateState.Not_Started)
            {
                <div class="card col-4 d-inline-block mx-1" style="width: 18rem;">
                    <form method="post">
                        <img class="card-img-top" src="@item.RentRequest.Advert.Car.ImageUrl">
                        <div class="card-body">
                            <h5 class="card-title">@item.RentRequest.Advert.Car.CarSerial.CarModel.CarMark.Name @item.RentRequest.Advert.Car.CarSerial.CarModel.Name</h5>
                            <p class="card-text">Aracı İsteyen Kişi:<button type="submit" asp-action="UpdateMember" name="Id" value="@item.RentRequest.User.Id" class="btn btn-primary">@item.RentRequest.User.Name</button></p>
                            <p class="card-text">Toplam Fiyat: @item.RentRequest.TotalPrice</p>
                            <p class="card-text">Başlangıç Tarihi: @item.RentRequest.RentStart</p>
                            <p class="card-text">Bitiş Tarihi: @item.RentRequest.RentEnd</p>
                        </div>
                    </form>
                </div>
            }

        }
    </div>
    <div class="col-12 border border-1">
        <h1 class="text-center">Kirada Olanlar</h1>
        @foreach (var item in Model)
        {

            @if (item.RentDateState == Torcar.CORE.Enums.RentDateState.Rented)
            {
                <div class="card col-4 d-inline-block mx-1" style="width: 18rem;">
                    <form method="post">
                        <img class="card-img-top" src="@item.RentRequest.Advert.Car.ImageUrl">
                        <div class="card-body">
                            <h5 class="card-title">@item.RentRequest.Advert.Car.CarSerial.CarModel.CarMark.Name @item.RentRequest.Advert.Car.CarSerial.CarModel.Name</h5>
                            <p class="card-text">Aracı İsteyen Kişi:<button type="submit" asp-action="UpdateMember" name="Id" value="@item.RentRequest.User.Id" class="btn btn-primary">@item.RentRequest.User.Name</button></p>
                            <p class="card-text">Toplam Fiyat: @item.RentRequest.TotalPrice</p>
                            <p class="card-text">Başlangıç Tarihi: @item.RentRequest.RentStart</p>
                            <p class="card-text">Bitiş Tarihi: @item.RentRequest.RentEnd</p>
                        </div>
                    </form>
                </div>
            }

        }
    </div>
    <div class="col-12 border border-1">
        <h1 class="text-center">Kirası Bitenler</h1>
        @foreach (var item in Model)
        {

            @if (item.RentDateState == Torcar.CORE.Enums.RentDateState.Finished)
            {
                <div class="card col-4 d-inline-block mx-1" style="width: 18rem;">
                    <form method="post">
                        <img class="card-img-top" src="@item.RentRequest.Advert.Car.ImageUrl">
                        <div class="card-body">
                            <h5 class="card-title">@item.RentRequest.Advert.Car.CarSerial.CarModel.CarMark.Name @item.RentRequest.Advert.Car.CarSerial.CarModel.Name</h5>
                            <p class="card-text">Aracı İsteyen Kişi:<button type="submit" asp-action="UpdateMember" name="Id" value="@item.RentRequest.User.Id" class="btn btn-primary">@item.RentRequest.User.Name</button></p>
                            <p class="card-text">Toplam Fiyat: @item.RentRequest.TotalPrice</p>
                            <p class="card-text">Başlangıç Tarihi: @item.RentRequest.RentStart</p>
                            <p class="card-text">Bitiş Tarihi: @item.RentRequest.RentEnd</p>
                        </div>
                    </form>
                </div>
            }

        }
    </div>
</div>