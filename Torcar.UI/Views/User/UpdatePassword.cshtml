@model UpdatePasswordDto
@{
    ViewData["Title"] = "Şifre Değiştir";
}
<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <form method="post" asp-action="UpdatePassword" asp-controller="User">
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Kullanıcı Adı" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RePassword" class="form-label">Şifre Tekrar</label>
                <input asp-for="RePassword" class="form-control" placeholder="Şifre" type="password" />
                <span asp-validation-for="RePassword" class="text-danger small"></span>
            </div>
            <div class="form-group d-grid mb-3 ">
                <button class="btn btn-primary" type="submit"> Şifreyi Değiştir</button>
            </div>
        </form>
    </div>
</div>