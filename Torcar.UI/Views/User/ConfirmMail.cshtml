@model UserConfirmDto
@{

    ViewData["Title"] = "Hesap Doğrulama";
}
<div class="row">
    <div class="col-4 offset-4">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <form method="post" asp-action="ConfirmMail" asp-controller="User">
            <div class="form-group mb-3">
                <label asp-for="ConfirmCode" class="form-label">Doğrulama Kodu</label>
                <input asp-for="ConfirmCode" type="text" class="form-control" placeholder="Doğrulama Kodu" />
                <span asp-validation-for="ConfirmCode" class="text-danger small"></span>
            </div>
            <div class="form-group d-grid mb-3 ">
                <button class="btn btn-primary" type="submit">Doğrula</button>
            </div>
        </form>
    </div>
</div>