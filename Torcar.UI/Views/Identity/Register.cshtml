@model UserRegisterDto

@{

    ViewData["Title"] = "Kayıt Ol";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center"> @ViewData["Title"] </h1>
    </div>
</div>

<div class="row">
    <form method="post"enctype="multipart/form-data" asp-controller="Identity" asp-action="Register">
        <div class="m-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="col-lg-8 col-md-8 mx-auto px-0 text-center">
                
                <div class="form-group mb-3">
                    
                        <label asp-for="PersonName" class="form-label">İsim</label>
                        <input asp-for="PersonName" type="text" class="form-control" placeholder="*İsim" />
                        <span asp-validation-for="PersonName" class="text-danger small"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PersonSurName" class="form-label">Soyisim</label>
                        <input asp-for="PersonSurName" type="text" class="form-control" type="text" placeholder="*Soyisim" />
                        <span asp-validation-for="PersonSurName" class="text-danger small"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="*Email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="TC" class="form-label">TC Kimlik</label>
                        <input asp-for="TC" class="form-control" type="text" placeholder="*TC Kimlik" />
                        <span asp-validation-for="TC" class="text-danger small"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Gender" class="form-label">Cinsiyet</label>
                        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Torcar.CORE.Enums.Gender>()" class="form-control"></select>
                        <span asp-validation-for="Gender" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-lg-8 col-md-8 mx-auto px-0 text-center">
                    <div class="form-group mb-3">
                        <label asp-for="Adress" class="form-label">Adres</label>
                        <input asp-for="Adress" class="form-control" placeholder="*Adres" type="text" />
                        <span asp-validation-for="Adress" class="text-danger small"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Image" class="form-label">Resim</label>
                        <div class="custom-file">
                            <input asp-for="Image" name="Create" type="file" class="form-control custom-file-input" id="customFile" /><label class="custom-file-label">Resim Seçiniz</label>
                            <span asp-validation-for="Image" class="text-danger small"></span>
                        </div>

                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Phone" class="form-label">Telefon Numarası</label>
                        <input asp-for="Phone" class="form-control" type="text" placeholder="*Telefon Numarası" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Age" class="form-label">Yaş</label>

                        <input asp-for="Age" class="form-control" type="number" placeholder="*Yaş Bilgisi" />
                        <span asp-validation-for="Age" class="text-danger small"></span>
                    </div>

                </div>
            </div>
        <div class="m-auto text-center">
            <div class="col-lg-8 col-md-8 mx-auto px-0 text-center">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Kullanıcı Adı</label>
                    <input asp-for="Name" class="form-control" type="text" placeholder="*Kullanıcı Adı" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Şifre</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="*Şifre" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="RePassword" class="form-label">Şifre Tekrar</label>
                    <input asp-for="RePassword" class="form-control" type="password" placeholder="*Şifre Tekrar" />
                    <span asp-validation-for="RePassword" class="text-danger small"></span>
                </div>
            </div>
        </div>
        <div class="form-group mb-3 d-grid">
            <button type="submit" class="btn btn-primary d-block"><i class="fa-sharp fa-solid fa-right-to-bracket"></i> Kayıt Ol</button>
        
        </div>
    </form>
</div>
<script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
</script>
