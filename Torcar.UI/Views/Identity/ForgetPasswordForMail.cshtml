@model ForgetPasswordDto
@{
    ViewData["Title"] = "Şifremi Unuttum";
}
<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <div asp-validation-summary="All" class="text-danger small"></div>
        <form method="post" asp-action="ForgetPasswordForMail" asp-controller="Identity">
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Hesaba Kayıtlı Olduğunuz Email</label>
                <input asp-for="Email" type="text" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="form-group d-grid mb-3 ">
                <button class="btn btn-primary" type="submit">Giriş</button>
            </div>
        </form>
    </div>
</div>
